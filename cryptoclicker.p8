function init_crypto()
	cryptotype={"bitcoin","ethereum","tehter","binance","dogecoin","shiba inu"}
	cryptovalue={32,16,8,4,2,1}
	cryptoindex=1
	cval=0
end

function draw_crypto()
	--first row
	spr(1,16,48)
	spr(2,24,48)
	spr(3,32,48)
	spr(4,40,48)
	
	--second row
	spr(17,16,56)
	spr(18,24,56)
	spr(19,32,56)
	spr(20,40,56)
	
	--third row
	spr(33,16,64)
	spr(34,24,64)
	spr(35,32,64)
	spr(36,40,64)
	
	-- fourth row
	spr(49,16,72)
	spr(50,24,72)
	spr(51,32,72)
	spr(52,40,72)
end

function click_crypto()
	if msx>=16 and msx<=48 and 
				msy>=48 and msy<=80 and 
				nmck 
		then 
		cval+=1
		sfx(0)	
	end
end
