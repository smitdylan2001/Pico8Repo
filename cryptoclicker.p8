function _init()
	poke(0x5f2d, 1)
	init_crypto()
	init_mouse()
end

function _update()
	update_mouse()
	click_crypto()
end

function _draw()
	cls()	-- clear screen
	rectfill(0,0,128,128,1) -- bg color
	
	draw_crypto()
	draw_menu()
	draw_crypto_data()
	
	draw_cursor()
end
