function _init()
	poke(0x5f2d, 1)
	init_crypto()
	init_menu()
	init_mouse()
end

function _update()
	update_mouse()
	click_crypto()
	check_for_moneymultiples()
	get_cheats_input()
end

function _draw()
	cls()	-- clear screen
	rectfill(0,0,128,128,1) -- bg color
	
	draw_crypto()
	draw_menu()
	draw_menu_data()

	draw_cursor()
end
