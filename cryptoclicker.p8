function init_crypto()
	cryptotype={"bitcoin","ethereum","tehter","binance","dogecoin","shiba inu"}
	cryptovalues={1,0.1,0.01,0.001,0.0001,0.00001}
	cryptoindex=6
	money=0.00000
	moneymultiples=0
end

function draw_crypto()
	--first row
	spr(0,16,48)
	spr(1,24,48)
	spr(2,32,48)
	spr(3,40,48)
	
	--second row
	spr(16,16,56)
	spr(17,24,56)
	spr(18,32,56)
	spr(19,40,56)
	
	--third row
	spr(32,16,64)
	spr(33,24,64)
	spr(34,32,64)
	spr(35,40,64)
	
	-- fourth row
	spr(48,16,72)
	spr(49,24,72)
	spr(50,32,72)
	spr(51,40,72)
end

function click_crypto()
	if msx>=16 and msx<=48 and msy>=48 and msy<=80 and nmck then 
		money+=cryptovalues[cryptoindex]
		sfx(0)	
	end
end

function check_for_moneymultiples()
	if money >= 1000 then
		money=0
		moneymultiples+=1
	end
end
